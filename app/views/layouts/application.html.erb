<!DOCTYPE html>
<html>
  <head>
    <title>Mixtape</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <% puts "rails: #{ENV["RAILS_ENDPOINT"] }" %>
    <% puts "node: #{ENV["NODE_ENDPOINT"] }" %>
    <% puts "env: #{ENV["RAILS_ENV"] }" %>
    <% puts "node_env: #{ENV["NODE_ENV"] }" %>
    <script>
      <% if ENV["NODE_ENDPOINT"] %>
        window.NODE_ENV = "production";
        window.NODE_ENDPOINT = "<%= ENV["NODE_ENDPOINT"] %>";
        window.GOOGLE_API_KEY = "<%= ENV["GOOGLE_API_KEY"]%>";
      <% else %>
        window.NODE_ENV = "development"
        window.NODE_ENDPOINT = "http://localhost:3001";
      <% end %>

    </script>
    <script>
      <% if current_user %>
        window.currentUser = {
          id: "<%= current_user.id %>",
          email: "<%= current_user.email %>",
          username: "<%= current_user.username %>"
        }
      <% end %>
    </script>
    <link rel="icon" href="https://react-spotify-aa.s3-us-west-1.amazonaws.com/reactnote2.png">
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>
